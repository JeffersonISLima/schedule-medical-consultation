{{!-- login form --}}
<form class="login" action="/paciente/cadastro" method="POST">
  <div class="row">
    <div class="col s12 14 offset-14">
      <div class="card">
        <div class="card-action red white-text">
          <h3>Cadastro de paciente:</h3>
        </div>
        <div class="card-content">
          <div class="form-field">
            <label for="cpf">CPF:* </label>
            <input type="text" name="cpf" required>
          </div><br>

          <div class="form-field">
            <label for="name">Nome:* </label>
            <input type="text" name="name" required>
          </div><br>

          <div class="form-field">
            <label for="birthdate">Data de nascimento:* </label>
            <input type="date" name="birthdate" required>
          </div><br>

          <div class="form-field">
            <label for="telResidencial">Telefone residencial:* </label>
            <input type="tel" name="telResidencial" pattern="[0-9]{2}-[0-9]{4}-[0-9]{4}" placeholder="11-9999-9999"
              required>
          </div><br>

          <div class="form-field">
            <label for="cellphone">Celular:* </label>
            <input type="tel" name="cellphone" pattern="[0-9]{2}-[0-9]{5}-[0-9]{4}" placeholder="11-9999-9999" required>
          </div><br>

          <div class="form-field">
            <label for="healthInsurance">Plano de saúde:* </label>
            <input type="text" name="healthInsurance" required>
          </div><br>

          <div class="card-action red white-text">
            <h3>Informações de acesso:</h3>
          </div>
          <div class="card-content">
            <div class="form-field">
              <label for="username">Usuário:* </label>
              <input type="text" name="username" required>
            </div><br>

            <div class="form-field">
              <label for="password">Senha:* </label>
              <input type="password" name="password">
            </div><br>
          </div>
          <div class="form-field center-align">
            <input id="button" class="btn-large red" type="submit" value="Enviar">
          </div><br>
        </div>
      </div>
    </div>
  </div>
</form>

