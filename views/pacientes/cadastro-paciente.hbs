<h1>Cadastro de pacientes</h1>

<div class="cadastro-medico-div-container">
  <h2>Informações pessoais</h2>

  <form action="/paciente/cadastro" method="POST">
    <div class="div-dashed">
      <label for="crm">CPF:* </label>
      <input type="number" name="cpf" required>
      <label for="name">Nome:* </label>
      <input type="text" name="name" required>
      <label for="data-nascimento">Data de nascimento:* </label>
      <input type="date" name="data-nascimento" required>
      <label for="telefone-residencial">Telefone residencial:* </label>
      <input type="tel" name="telefone-residencial" pattern="[0-9]{2}-[0-9]{4}-[0-9]{4}" required>
      <span>Formato: 11-9999-9999</span>
      <label for="telefone-celular">Celular:* </label>
      <input type="tel" name="telefone-celular" pattern="[0-9]{2}-[0-9]{5}-[0-9]{4}" required>
      <span>Formato: 11-9999-9999</span>
      <label for="plano-saude">Plano de saúde:* </label>
      <input type="text" name="plano-saude" required>
    </div>

    <h2 class="cadastro-medico-h2">Informações de acesso</h2>
    <div class="div-dashed">
      <label for="email">E-mail:* </label>
      <input type="email" name="email" required>
      <label for="senha">Senha:* </label>
      <input type="password" name="senha">
      <input type="submit" value="Gravar" >
      <input type="button" value="Voltar" name="voltar" onclick="location.href='/';">
    </div>
  </form>
</div>