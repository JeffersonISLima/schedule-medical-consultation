<h1 class="center">Histórico de consultas</h1>
<div class="container-flex">
  {{#each user}}
  <div class="row">    
   <div class="col s12 m12">
 <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Consulta: {{this.date}}</span>
          <li><strong>Convênio: </strong>{{this.group1}}
          <li><strong>Especialidade:</strong> {{this.specialty}}</li>
          <li><strong>Doutorª:</strong> {{this.doctor}}</li>
          <li><strong>Dia da semana: </strong> {{this.date}}</li>
          <li><strong>Hora da consulta: </strong> {{this.hour}}</li>
        </div>
        <div class="card-action">
          <a href="/paciente/del/{{this._id}}">Delete</a>
          <a href="/paciente/edit/{{this._id}}">Editar</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

