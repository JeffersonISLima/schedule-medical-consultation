<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css ">

<div class="container">
  <form action="/paciente/edit/{{patient._id}}" method="POST">
    <div class="row">
      <div class="col s12 14 offset-14">
        <div class="card">
          <div class="card-action red white-text">
            <h3>Corrigir informações da consulta</h3>
          </div>
          <div class="card-content">
            <div class="form-field">
              <label for="">Plano de saúde:</label>
              <input type="text" name="group1" value="{{patient.group1}}" required>
            </div><br>

            <div class="form-field">
              <label for="">Dia da semana:</label>
              <input type="text" name="date" value="{{patient.weekday}}" required>
            </div><br>

            <div class="form-field">
              <label for="">Hora:</label>
              <input type="text" name="hour" value="{{patient.hour}}" required>
            </div><br>
            <div class="form-field center-align">
              <input id="button" class="btn-large red" type="submit" value="Enviar">
            </div><br>
          </div>
        </div>
      </div>
    </div>
  </form>