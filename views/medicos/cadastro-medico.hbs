<h1>Cadastro de médico</h1>

<div class="cadastro-medico-div-container">
  <h2>Informações pessoais</h2>

  <form action="/cadastro" method="POST">
    <div class="cadastro-medico-div">
      <label for="name">Nome:* </label>
      <input type="text" name="name" required>
      <label for="crm">CRM:* </label>
      <input type="number" name="crm" required>
      <label for="especialidade">Especialidade:* </label>
      <input type="text" name="especialidade" required>
      <label for="telefone-residencial">Telefone residencial:* </label>
      <input type="tel" name="telefone-residencial" pattern="[0-9]{2}-[0-9]{4}-[0-9]{4}" required>
      <span>Formato: 11-9999-9999</span>
      <label for="telefone-celular">Celular:* </label>
      <input type="tel" name="telefone-celular" pattern="[0-9]{2}-[0-9]{5}-[0-9]{4}" required>
      <span>Formato: 11-9999-9999</span>
    </div>

    <h2 class="cadastro-medico-h2">Informações de acesso</h2>
    <div class="cadastro-medico-div">
      <label for="email">E-mail:* </label>
      <input type="email" name="email" required>
      <label for="senha">Senha:* </label>
      <input type="password" name="senha">
    </div>
    <input type="button" value="Gravar" name="gravar" id="gravar">
    <input type="button" value="Voltar" name="voltar" id="voltar">
  </form>
</div>